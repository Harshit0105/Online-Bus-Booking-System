@model BusBooking.ViewModel.TicketConfirmViewModel

@{
    ViewData["Title"] = "ViewTicket";
}

<h1>ViewTicket</h1>

<div>
    <h4>Ticket</h4>
    <hr />
    <dl class="row">
        <form asp-action="ViewTicket" method="post" asp-controller="Home">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.bus.Bus_Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.bus.Bus_Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ticket.Travel_Date)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ticket.Travel_Date)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ticket.Seat_Id)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ticket.Seat_Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ticket.Amount)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ticket.Amount)
            </dd>
            <button class="btn btn-block btn-primary" type="submit">Confirm Booking</button>
        </form>
    </dl>
</div>
<div>
    <a asp-action="Index" style="color:red;">Cancle</a>
</div>
