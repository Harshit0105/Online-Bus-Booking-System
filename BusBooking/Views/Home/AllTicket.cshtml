@model IEnumerable<BusBooking.Models.Ticket>

@{
    ViewData["Title"] = "AllTicket";
}
@{
    Layout = "_LayoutHome";
}
<h1>AllTicket</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Travel_Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bus.Bus_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bus.Bus_Type)
            </th>
            <th>
                From
            </th>
            <th>
                To
            </th>
            <th>
                Seats
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @{
                    DateTime date = item.Travel_Date;
                }
                @date.ToString("d")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bus.Bus_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bus.Bus_Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bus.Souce_City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bus.Destination_City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Seat_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            @if (item.Travel_Date.CompareTo(DateTime.Now) > 0)
            {
                <!--<td>
            <a asp-action="DeleteTicket" asp-route-id="@item.Ticket_Id">Delete</a>
        </td>-->
            }
        </tr>
        }
    </tbody>
</table>
