@model IEnumerable<BusBooking.Models.Bus>

@{
    ViewData["Title"] = "BusFound";
}
@{
    Layout = "_LayoutHome";
}

<h1>BusFound</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Bus_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bus_No)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Souce_City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destination_City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Number_Of_Seats)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Source_Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destination_Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Available)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bus_Type)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Bus_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Bus_No)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Souce_City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Destination_City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Number_Of_Seats)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Source_Time)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Destination_Time)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Available)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Bus_Type)
                </td>

            </tr>
        }
    </tbody>
</table>
